<%- include("../../views/partials/admin/header") %>

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="content-title text-primary">Products</h2>
        <a href="/admin/addProduct" class="btn btn-primary shadow-sm px-4">
            <i class="fas fa-plus me-2"></i> Add Product
        </a>
    </div>

    <!-- Search Bar -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body p-3">
            <form action="" method="get" class="d-flex justify-content-center">
                <div class="input-group" style="max-width: 500px;">
                    <input 
                        type="text" 
                        class="form-control" 
                        placeholder="Search products or brands" 
                        name="search"
                        value="<%= locals.searchQuery || '' %>"
                    >
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Products Table -->
    <div class="card shadow-sm">
        <div class="card-body p-3">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Product Name</th>
                            <th>Brand</th>
                            <th>Category</th>
                            <th>Sale Price</th>
                            <th>Offer Price</th>
                            <th>Quantity</th>
                            <th>Offer</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                            <tr class="align-middle">
                                <td><%= product.name %></td>
                                <td><%= product.brand ? product.brand.name : 'No Brand' %></td>
                                <td><%= product.category ? product.category.name : 'No Category' %></td>
                                <td>₹<%= product.price %></td>
                                <td>₹<%= product.offerPrice || '-' %></td>
                                <td><%= product.quantity %></td>
                                
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-primary" 
                                                onclick="addOffer('<%= product._id %>')">
                                            Add Offer
                                        </button>
                                        <% if (product.offerPrice) { %>
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    onclick="removeOffer('<%= product._id %>')">
                                                Remove
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                                <td>
                                    <% if (product.status === 'Blocked') { %>
                                        <span class="badge bg-danger">Blocked</span>
                                    <% } else { %>
                                        <span class="badge bg-success">Active</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/admin/edit-product/<%= product._id %>" 
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <% if (product.status === 'Blocked') { %>
                                            <button class="btn btn-sm btn-success" 
                                                    onclick="updateStatus('<%= product._id %>', 'unblock')">
                                                <i class="fas fa-unlock"></i>
                                            </button>
                                        <% } else { %>
                                            <button class="btn btn-sm btn-danger" 
                                                    onclick="updateStatus('<%= product._id %>', 'block')">
                                                <i class="fas fa-lock"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="container mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
                <% for (let i = 1; i <= (typeof totalPages !== 'undefined' ? totalPages : 1); i++) { %>
                    <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="/admin/products?page=<%= i %>&search=<%= searchQuery %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </nav>
        
    </div>
</div>

<!-- Scripts -->
<script>
    function updateStatus(productId, action) {
        Swal.fire({
            title: 'Are you sure?',
            text: `Do you want to ${action} this product?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, proceed!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/update-product-status/${productId}/${action}`;
            }
        });
    }

    function addOffer(productId) {
        Swal.fire({
            title: 'Add Offer',
            input: 'number',
            inputLabel: 'Enter offer price',
            showCancelButton: true,
            inputValidator: (value) => {
                if (!value || value <= 0) {
                    return 'Please enter a valid offer price!';
                }
            }
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/add-offer/${productId}/${result.value}`;
            }
        });
    }

    function removeOffer(productId) {
        Swal.fire({
            title: 'Remove Offer',
            text: 'Are you sure you want to remove this offer?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, remove it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/remove-offer/${productId}`;
            }
        });
    }

    function addOffer(productId) {
    Swal.fire({
        title: 'Add Offer',
        input: 'number',
        inputLabel: 'Enter offer price',
        showCancelButton: true,
        inputValidator: (value) => {
            if (!value || value <= 0) {
                return 'Please enter a valid offer price!';
            }
        }
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = `/admin/add-offer/${productId}/${result.value}`;
        }
    });
}


function removeOffer(productId) {
    Swal.fire({
        title: 'Remove Offer',
        text: 'Are you sure you want to remove this offer?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, remove it!'
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = `/admin/remove-offer/${productId}`;
        }
    });
}

</script>

